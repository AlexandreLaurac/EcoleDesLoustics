<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityJava.ActivityMathCalculMentalResultat"
    android:orientation="vertical">

    <TextView
        android:id="@+id/calculMentalResultat_texteResultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:gravity="center"
        android:text="Tu as donné"/>

    <TextView
        android:id="@+id/calculMentalResultat_texteEncouragement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="35sp"
        android:text="Félicitations !"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:gravity="center"
        android:text="Clique sur l'un des boutons suivants pour continuer"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Autre exercice de calcul mental"
        android:onClick="AutreExerciceCalculMental" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Autre exercice de mathématiques"
        android:onClick="AutreExerciceMaths" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Retour au menu principal"
        android:onClick="MenuPrincipal" />

</LinearLayout>