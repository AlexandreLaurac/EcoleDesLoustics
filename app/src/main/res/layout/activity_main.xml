<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityJava.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titre_accueil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenue à \nl'Ecole des Loustics!"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        >
    </TextView>
    <TextView
        android:id="@+id/explicatif_accueil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="L'application pour apprendre et t'améliorer à ton rythme!"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_below="@id/titre_accueil"
        android:layout_marginTop="60dp"
        >
    </TextView>

    <TextView
        android:id="@+id/accueil_explication_option"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Si tu as déjà un compte ou que tu veux t'inscrire, clique sur connexion. Sinon clique sur  visiteur."
        android:layout_below="@id/explicatif_accueil"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        >
    </TextView>
    <Button
        android:id="@+id/connexion"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="CONNEXION"
        android:onClick="onConnexion"
        android:layout_below="@id/accueil_explication_option"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        >
    </Button>

    <Button
        android:id="@+id/visiteur"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="VISITEUR"
        android:onClick="onMenu"
        android:layout_below="@+id/connexion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >
    </Button>

</RelativeLayout>