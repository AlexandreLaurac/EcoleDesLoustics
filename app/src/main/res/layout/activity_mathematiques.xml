<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityJava.ActivityMathematiques"
    >

    <TextView
        android:id="@+id/math_menu_titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Bienvenue dans le portail \ndes mathématiques !"
        android:layout_marginTop="30sp"
        android:textSize="30dp"
        android:textAlignment="center"
        ></TextView>
    <TextView
        android:id="@+id/math_menu_explicatif1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="L'objectif est de t'apprendre à réaliser de tête des additions et des multiplications."
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_below="@+id/math_menu_titre"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        >
    </TextView>
    <TextView
        android:id="@+id/math_menu_explicatif2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Commence par t'entraîner avec les tables. Puis passe aux 10 opérations (additions et multiplications).\nSi tu es motivé, tu peux passer au calcul mental chronométré !"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_below="@id/math_menu_explicatif1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        >
    </TextView>
    <Button
        android:id="@+id/math_menu_table_addi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="TABLE D'ADDITION"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/math_menu_explicatif2"
        android:onClick="onTableAddition"
        ></Button>

    <Button
        android:id="@+id/math_menu_table_multi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="TABLE DE MULTIPLICATION"
        android:layout_below="@+id/math_menu_table_addi"
        android:layout_centerHorizontal="true"
        android:onClick="onTableMultiplication"
        ></Button>

    <Button
        android:id="@+id/math_menu_10_addi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="10 ADDITIONS"
        android:layout_below="@+id/math_menu_table_multi"
        android:layout_centerHorizontal="true"
        android:onClick="on10Addition"
        ></Button>

    <Button
        android:id="@+id/math_menu_10_multi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="10 MULTIPLICATIONS"
        android:layout_below="@+id/math_menu_10_addi"
        android:layout_centerHorizontal="true"
        android:onClick="on10Multiplication"
        ></Button>

    <Button
        android:id="@+id/math_menu_calcul_mental"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="CALCUL MENTAL"
        android:layout_below="@+id/math_menu_10_multi"
        android:layout_centerHorizontal="true"
        android:onClick="onCalculMental"
        ></Button>

</RelativeLayout>